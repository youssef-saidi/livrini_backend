@model IEnumerable<Livrini.Models.LigneOrder>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dish.IdDish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.IdOrder)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdLigneOrder">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdLigneOrder">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdLigneOrder">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
